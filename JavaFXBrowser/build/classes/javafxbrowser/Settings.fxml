<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="background" alignment="CENTER" prefHeight="120" prefWidth="300.0" spacing="20" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxbrowser.SettingsController">

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="lightLabel" text="Light" textFill="#121212" />
        <JFXToggleButton fx:id="themeToggle" focusTraversable="false" text="" toggleColor="#0497ec" toggleLineColor="#90caf9" />
        <Label fx:id="darkLabel" text="Dark" textFill="#121212" />
    </HBox>

</VBox>
